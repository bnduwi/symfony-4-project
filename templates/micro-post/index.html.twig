{% extends 'base.html.twig' %}

{% block body %}
<h6 class="border-bottom border-gray pb-2 mb-0 font-weight-bold">Recent updates</h6>
    {% for post in posts %}
    <div class="media text-muted pt-3">
        <img data-src="holder.js/32x32?text=MP&bg=e83e8c&fg=fff&size=8" alt="" class="mr-2 rounded">
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <span class="d-block">
                <a href="#">
                    <strong class="text-gray-dark">@username</strong> 
                </a>                    
                <small>&#x000B7 {{ post.time|date("d/m/Y  F jS g:ia") }}</small>
            </span>
            <a href="#" >
                {{ post.text }}
            </a>                        
        </p>
        <small class="text-right mt-3">
            {% if is_granted('edit', post) %}
                <a href="#" > [Edit] </a>
            {% endif %}
            
            {% if is_granted('delete', post) %}
                <a href="#" > [Delete] </a>
            {% endif %}
            
        </small>
    </div>
    {% endfor %}
{% endblock %}


